<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" class="page">

    <Page.actionBar>
        <ActionBar title="{{ title }}" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>

    <StackLayout class="p-20">
        <Label text="{{ 'by - ' + author }}"></Label>
        <Image src="{{ urlToImage }}" width="100" height="100"></Image>
        <Label text="{{ description }}" class="h2 text-center" textWrap="true"/>
    </StackLayout>
</Page>